<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_role"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_register"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="@id/ll_info"
        style="@style/LinearLayout"
        app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="0dp"
                android:src="@drawable/with_phone"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:contentDescription="@null" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/registration"
                android:textSize="@dimen/_18ssp"
                android:textColor="@color/green"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_info"
        style="@style/LinearLayout"
        app:layout_constraintTop_toBottomOf="@id/ll_register"
        android:layout_width="match_parent">
        <ImageView
            android:layout_width="0dp"
            android:src="@drawable/icon_women_rocket"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:contentDescription="@null" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="@string/information"
            android:textSize="@dimen/_18ssp"
            android:textColor="@color/green"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>